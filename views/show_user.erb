<p>Hello <%= @user.username %></p>

<% if @user.carts.present? %>

	<p>Carts</p>
	<% @user.carts.each_with_index do |cart, index| %>
		Cart <%= index+1 %>:
		<ul>
			<li>
				<% cart.cart_items.each do |item| %>
					<p><%= item.product.name %></p>
				<% end %>
			</li>
			<li>Price:<%= cart.total_price %>TL</li>
		</ul>
	
	<% end %>
<% end %>



<a href="/products">Go to products page"</a>